#include <WiFi.h>
#include <WebServer.h>

const char* ssid = "AP_asix";
const char* password = "AP_asix2023";
WebServer server(80);

void setup() {
  Serial.begin(115200);
  delay(10);
  pinMode(0, INPUT);

  Serial.println();
  Serial.print("[WiFi] Connecting to ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("[WiFi] Connecting to WiFi...");
  }
  Serial.println("[WiFi] WiFi connected");
  Serial.print("[WiFi] IP address: ");
  Serial.println(WiFi.localIP());

  server.on("/", [](){
    String html = "<!DOCTYPE html><html><body>";
    html += "<h2>Wifi</h2>";
    html += "<form action='/submit' method='get'>";
    html += "SSID:<br>";
    html += "<input type='text' name='nombre'><br>";
    html += "Password:<br>";
    html += "<input type='number' name='edad'><br><br>";
    html += "<input type='submit' value='Enviar'>";
    html += "</form></body></html>";
    server.send(200, "text/html", html);
  });

  server.on("/submit", [](){
    String message = "Datos recibidos:<br>";
    message += "SSID: " + server.arg("SSID") + "<br>";
    message += "Password: " + server.arg("Password") + "<br>";
    server.send(200, "text/html", message);
  });

  server.begin();
}

void loop() {
  server.handleClient();
}
